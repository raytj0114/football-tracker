{
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(pnpm:*)",
      "Bash(node:*)"
    ],
    "deny": [
      "Edit(.env*)",
      "Write(.env*)",
      "Bash(rm -rf /)",
      "Bash(:*secrets:*)",
      "Bash(:*password:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/check-protected-files.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/format-file.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/scripts/verify-on-stop.js && .claude/scripts/type-check.js"
          }
        ]
      }
    ]
  }
}
